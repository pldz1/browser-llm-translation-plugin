{
  "manifest_version": 3,
  "name": "LLM translator",
  "version": "1.0.7",
  "description": "大语言模型的文本翻译插件",
  "permissions": ["activeTab", "scripting", "contextMenus", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "llm_translate_shortcut": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "大语言模型的文本翻译插件"
    }
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
